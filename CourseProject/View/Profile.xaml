<Page x:Class="CourseProject.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProject"
      xmlns:localModel="clr-namespace:CourseProject.Model"
      xmlns:localModecol="clr-namespace:CourseProject.Model.Collections"
      xmlns:localConverters="clr-namespace:CourseProject.Converters"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      xmlns:localViewModel="clr-namespace:CourseProject.ViewModel.Interfaces"
      xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
      Title="Page2" Background="White" Height="517" Width="900"
      Name="ProfilePage"
      d:DataContext = "{d:DesignInstance localViewModel:IMediator, IsDesignTimeCreatable=False}">

    <Page.Resources>
        <localModecol:TrainInProfileModelCollection x:Key="Trains"/>
        <localModel:PassengerProfileCollection x:Key="Passengers"/>
        <Style x:Key="HorizontalExpanderContentTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="Opacity" Value=".68" />
            <Setter Property="Text" Value="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="VerticalExpanderContentTextBlock"
           TargetType="{x:Type TextBlock}"
           BasedOn="{StaticResource HorizontalExpanderContentTextBlock}">
            <Setter Property="MaxWidth" Value="180" />
        </Style>
        <Style x:Key="HorizontalDividerBorder" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}" />
            <Setter Property="Height" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="UseLayoutRounding" Value="True" />
        </Style>

        <Style x:Key="VerticalDividerBorder"
           TargetType="{x:Type Border}"
           BasedOn="{StaticResource HorizontalDividerBorder}">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Width" Value="1" />
        </Style>
    </Page.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel>
                
        <GroupBox
  Margin="16"
  materialDesign:ColorZoneAssist.Background="Black"
  materialDesign:ColorZoneAssist.Foreground="White"
  materialDesign:ColorZoneAssist.Mode="Custom"
  Header="Данные аккаунта"
  Style="{StaticResource MaterialDesignCardGroupBox}">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
        Orientation="Horizontal">
                        <materialDesign:PackIcon
          Width="32"
          Height="32"
          VerticalAlignment="Center"
          Kind="ImageArea" />
                        <TextBlock
          Margin="8,0,0,0"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <WrapPanel>
                <materialDesign:PackIcon Kind="Account"/>
                    <StackPanel>
                        <StackPanel.Resources>
                         <localConverters:ConverterToPasswordChangeModel x:Key="ConverterToPasswordChangeModel"/>

                         </StackPanel.Resources>
                        <TextBlock Text="Сменить пароль" />
                            <PasswordBox
                                Name="OldPasswordBox"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Старый пароль"
    Style="{StaticResource MaterialDesignFilledPasswordBox}" >

                                <i:Interaction.Behaviors>
                                    <localModel:BehaviourPasswordBox x:Name="OldPasswordBehavior"/>
                                </i:Interaction.Behaviors>
                            </PasswordBox>
                            <PasswordBox
                                Name="NewPasswordBox"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Новый пароль"
    Style="{StaticResource MaterialDesignFilledPasswordBox}" >
                                <i:Interaction.Behaviors>
                                    <localModel:BehaviourPasswordBox x:Name="NewPasswordBehavior"/>
                                </i:Interaction.Behaviors>
                            </PasswordBox>
                            <materialDesign:Badged
  x:Name="CountingBadge"
  BadgeColorZoneMode="PrimaryDark">
                                <Button
            Command="{Binding Path=InfoProfileService.ChangePassword}"
    Content="Обновить пароль"
    Style="{StaticResource MaterialDesignRaisedLightButton}">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource ConverterToPasswordChangeModel}">
                                            <Binding ElementName="NewPasswordBehavior"/>
                                            <Binding ElementName="OldPasswordBehavior"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </Button>
                            </materialDesign:Badged>
                </StackPanel>
            </WrapPanel>
        </GroupBox>
        <materialDesign:Card>
            <StackPanel>
                    <Expander
      HorizontalAlignment="Stretch"
      Header="Пассажиры">
                            <StackPanel>
                                <StackPanel.Resources>
                                    <localConverters:ConverterForPassengerGender x:Key="ConverterForPassengerGender"/>
                                </StackPanel.Resources>

                                <Button
            Command="{Binding Path=InfoProfile.AddPassenger}"
    Content="Добавить пассажира"
    Style="{StaticResource MaterialDesignRaisedLightButton}" />
                                <ItemsControl 
               ItemsSource="{Binding Path=InfoProfileService.PassengerViewModels}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"  ScrollViewer.IsDeferredScrollingEnabled="True"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type localModel:PassengerViewModel}">
                                            <GroupBox
                                        Margin="16"
  Header="ФИО Пассажира"
  Style="{StaticResource MaterialDesignCardGroupBox}">
                                                <GroupBox.HeaderTemplate>
                                                    <DataTemplate>
                                                        <StackPanel
        Orientation="Horizontal">
                                                            <materialDesign:PackIcon
          Width="32"
          Height="32"
          VerticalAlignment="Center"
          Kind="CardAccountDetails" />
                                                            <TextBlock
          Margin="8,0,0,0"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="{Binding}" />


                                                        </StackPanel>

                                                    </DataTemplate>


                                                </GroupBox.HeaderTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <TextBox
                                                        Text="{Binding Name}"
                                            Grid.Row ="0"
    MaxWidth="400"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="ФИО"
    AcceptsReturn="True"
    
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" />
                                                    <materialDesign:ColorZone
  Mode="PrimaryMid" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0">
                                                        <StackPanel
    Margin="2"
    Orientation="Horizontal">
                                                            <RadioButton
      Margin="4"
      Content="Мужской"
      IsChecked="{Binding Gender, Converter={StaticResource ConverterForPassengerGender}, 
      ConverterParameter={x:Static localModel:Peoplegender.man}}"
      Style="{StaticResource MaterialDesignTabRadioButton}" />
                                                            <RadioButton
      Margin="4"
      Content="Женский"
      IsChecked="{Binding Gender, Converter={StaticResource ConverterForPassengerGender}, 
      ConverterParameter={x:Static localModel:Peoplegender.woman}}"
      Style="{StaticResource MaterialDesignTabRadioButton}" />
                                                        </StackPanel>
                                                    </materialDesign:ColorZone>
                                                    <DatePicker
                                            SelectedDate="{Binding Birthday}"
                                            Grid.Row="1"
                                            Grid.Column="1"
  Width="140"
  materialDesign:HintAssist.HelperText="Helper text"
  materialDesign:HintAssist.Hint="Pick Date"
  Style="{StaticResource MaterialDesignFilledDatePicker}" />
                                                    <TextBox
                                                        Text="{Binding Passport}"
                                            Grid.Row ="1"
    MaxWidth="400"
    VerticalAlignment="Top"
    materialDesign:HintAssist.Hint="Пасспорт"
    AcceptsReturn="True"
   
    Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap" />
                                                    <Button
                                            Grid.Row="2"
                                            Grid.Column="1"
  Command="{Binding ElementName=ProfilePage, Path=DataContext.InfoProfile.SavePassenger}"
  CommandParameter="{Binding}"
                                                        Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
  ToolTip="MaterialDesignFloatingActionDarkButton">

                                                        <Button.Resources>
                                                            <system:Double x:Key="IconSize">24</system:Double>
                                                            <system:Double x:Key="ButtonWidth">90</system:Double>
                                                        </Button.Resources>
                                                        <materialDesign:PackIcon
    Width="{StaticResource IconSize}"
    Height="{StaticResource IconSize}"
    Kind="ContentSave" />
                                                    </Button>
                                                    <Button
                                                        Grid.Column="0"
                                                        Grid.Row="2"
    Command="{Binding ElementName=ProfilePage, Path=DataContext.InfoProfile.RemovePassenger}"
    Content="Удалить пассажира"
    CommandParameter="{Binding}"
    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                                                </Grid>

                                            </GroupBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    <Border
      Style="{StaticResource HorizontalDividerBorder}" />
                    <Expander
      HorizontalAlignment="Stretch"
      Header="Билеты">
                        <StackPanel
        Margin="24,8,24,16"
        Orientation="Vertical"
        TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                                <ItemsControl ItemsSource="{Binding Path=InfoProfileService.Tickets}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"  ScrollViewer.IsDeferredScrollingEnabled="True"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type localModel:TicketModelForProfile}">
                                            <GroupBox
                                        Margin="16"
  Header="ФИО Пассажира"
  Style="{StaticResource MaterialDesignCardGroupBox}">
                                                <GroupBox.HeaderTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <materialDesign:PackIcon
          Width="32"
          Height="32"
          VerticalAlignment="Center"
          Kind="Ticket" />
                                                            <TextBlock
                                            Grid.Column="1"
          Margin="8,0,0,0"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="{Binding Path=TicketViewModel.Way.StartStationModel.Name}" />
                                                            <TextBlock
                                            Grid.Column="2"
          Margin="8,0,0,0"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="Куда" />
                                                            <TextBlock
                                            Grid.Column="3"
          Margin="8,0,0,0"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="{Binding t}" />
                                                            <TextBlock
                                            Grid.Column="4"
          VerticalAlignment="Center"
          Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
          Text="Дата прибытия" />
                                                        </Grid>



                                                    </DataTemplate>


                                                </GroupBox.HeaderTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Passenger.Name}" />
                                                    <materialDesign:ColorZone
  Mode="PrimaryMid" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0">
                                                        <StackPanel
    Margin="2"
    Orientation="Horizontal">
                                                            <RadioButton
      Margin="4"
      Content="Мужской"
      IsChecked="False"
      Style="{StaticResource MaterialDesignTabRadioButton}" />
                                                            <RadioButton
      Margin="4"
      Content="Женский"
      IsChecked="False"
      Style="{StaticResource MaterialDesignTabRadioButton}" />
                                                        </StackPanel>

                                                    </materialDesign:ColorZone>

                                                    <TextBlock Grid.Column="1" Grid.Row="1"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Passenger.Birthday}" />
                                                    <TextBlock Grid.Column="0" Grid.Row="1"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Passenger.Passport}" />

                                                    <TextBlock Grid.Column="0" Grid.Row="2"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Way.StartStationModel.Name}" />
                                                    <TextBlock Grid.Column="1" Grid.Row="2"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Way.EndStationModel.Name}" />
                                                    <TextBlock Grid.Column="0" Grid.Row="3"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Way.StartTimesForStationModel.DepartureTime}" />
                                                    <TextBlock Grid.Column="1" Grid.Row="3"
  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
  Text="{Binding Path=TicketViewModel.Way.EndTimesForStationModel.ArrivalTime}" />


                                                </Grid>

                                            </GroupBox>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
