                        </StackPanel>
                        </Expander>
                        <Border
      Style="{StaticResource HorizontalDividerBorder}" />
                        <Expander
      HorizontalAlignment="Stretch"
      Header="Поезда">
                            <StackPanel
        Margin="24,8,24,16"
        Orientation="Vertical"
        TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                                <ItemsControl 
               ItemsSource="{Binding Path=InfoProfileService.TrainInProfileModels}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"  ScrollViewer.IsDeferredScrollingEnabled="True"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>

                                            <GroupBox
                                        Margin="16"
  Header="ФИО Пассажира"
  Style="{StaticResource MaterialDesignCardGroupBox}">
                                                <GroupBox.HeaderTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>

                                                            <materialDesign:PackIcon
          Width="32"
          Height="32"
          VerticalAlignment="Center"
          Kind="CardAccountDetails" />

                                                        </StackPanel>




                                                    </DataTemplate>


                                                </GroupBox.HeaderTemplate>
                                                <StackPanel>
                                                    <ItemsControl 
               ItemsSource="{Binding Path=Stations}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Vertical"  ScrollViewer.IsDeferredScrollingEnabled="True"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <Button
                                                        Grid.Column="0"
                                                        Grid.Row="2"
    Command="{Binding ElementName=ProfilePage, Path=DataContext.InfoProfile.RemoveTrain}"
    Content="Удалить поезд"
    CommandParameter="{Binding}"
    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                                                    <Button
                                                        Grid.Column="0"
                                                        Grid.Row="2"
    Command="{Binding ElementName=ProfilePage, Path=DataContext.InfoProfile.EditTrain}"
    Content="Редактировать поезд"
    CommandParameter="{Binding}"
    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                                                </StackPanel>
                                            </GroupBox>
                                            
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Page>
