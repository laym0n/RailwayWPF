<Window x:Class="CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.Model"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        xmlns:materialDesignThemesWPF="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <materialDesignConverters:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"
                                                             FalseValue="Visible"
                                                             TrueValue="Collapsed" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"></RowDefinition>
            <RowDefinition Height="188*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="711*"/>
            <ColumnDefinition Width="89*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <materialDesign:PopupBox Grid.Column ="2"
                                
  x:Name="MainMenu"                         
  PlacementMode="BottomAndAlignCentres"
  Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
  ToolTip="PopupBox, Style MaterialDesignMultiFloatingActionPopupBox" 
  ToolTipService.Placement="Right" Cursor="Hand" StaysOpen="True" Background="#FF8052D4">
            <materialDesign:PopupBox.Resources>
                
            </materialDesign:PopupBox.Resources>
            <materialDesign:PopupBox.ToggleContent>
                <materialDesign:PackIcon 
      Width="24"
      Height="24"
                  x:Name="iconMainMenu"     
        >
                    <materialDesign:PackIcon.Resources>
                        <materialDesignThemesWPF:PackIconKind x:Key="NonRegistreted">
                            AccountQuestion
                        </materialDesignThemesWPF:PackIconKind>
                        <materialDesignThemesWPF:PackIconKind x:Key="Registreted">
                            Account
                        </materialDesignThemesWPF:PackIconKind>
                    </materialDesign:PackIcon.Resources>
                    <materialDesign:PackIcon.Style>
                        <Style TargetType="materialDesign:PackIcon">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SignInButton, Path=Visibility}"
                        Value="Collapsed">
                                    <Setter Property="Kind" Value="{StaticResource Registreted}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=SignInButton, Path=Visibility}"
                        Value="Visible">
                                    <Setter Property="Kind" Value="{StaticResource NonRegistreted}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:PackIcon.Style>
                </materialDesign:PackIcon>
            </materialDesign:PopupBox.ToggleContent>
            <StackPanel x:Name="StackMenuButtons">
                <StackPanel.Resources>
                    <system:Double x:Key="GridWidth">124</system:Double>
                    <system:Double x:Key="ButtonHeight">50</system:Double>
                </StackPanel.Resources>
                <Button
                    Visibility="{Binding Path=NavigationService.VisibleButtons.VisibleProfile}"
                    Command="{Binding Path=NavigationService.NavigateProfile}"
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners" 
                    Content="Мой профиль">
                </Button>
                <Button
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Visibility="{Binding Path =NavigationService.VisibleButtons.VisibleCreateTrain}"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Content="Создать поезд">
                    
                </Button>
                <Button
                    Visibility="{Binding Path=NavigationService.VisibleButtons.VisibleBuyTicket}"
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Content="Купить билет">
                </Button>
                <Button
                    Command="{Binding Path=SignIn.SignOut}"
                    Visibility="{Binding Path=NavigationService.VisibleButtons.VisibleSignOut}"
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Content="Выйти">
                </Button>
                <Button
                    Name="SignInButton"
                    Command="{Binding Path=SignIn.SignIn}"
                    Visibility="{Binding Path=NavigationService.VisibleButtons.VisibleSignIn}"
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Content="Войти">
                </Button>
                <Button
                    Command="{Binding Path=SignIn.SignUp}"
                    Visibility="{Binding  Path=NavigationService.VisibleButtons.VisibleSignUp}"
                    Margin="10"
    Height="{StaticResource ButtonHeight}"
    materialDesign:ButtonAssist.CornerRadius="10"
    Style="{StaticResource MaterialDesignRaisedButton}"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
                    Content="Регистрация">
                </Button>
            </StackPanel>
        </materialDesign:PopupBox>
        <Frame x:FieldModifier="public" NavigationUIVisibility="Hidden" x:Name ="NavigableFrame" Margin="0,0,0,0" Grid.RowSpan="2" Grid.Row="0"/>
    </Grid>
</Window>



